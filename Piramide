program Piramide;
uses crt;
var
  arr: array[1..10, 1..20] of char;
  i, j, num: integer;
begin
  clrscr;
  for i := 1 to 10 do
  begin
    num := i;  { n√∫mero inicial por fila }
    for j := 1 to i*2-1 do
    begin
      arr[i, j] := Chr(48 + (num mod 10)); { convierte a char }
      if j < i then
        inc(num)
      else
        dec(num);
    end;
  end;

  { Imprimir }
  for i := 1 to 10 do
  begin
    for j := 1 to i*2-1 do
      write(arr[i, j]);
    writeln;
  end;
  readln;
end.
