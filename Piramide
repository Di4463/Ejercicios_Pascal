program Piramide;
uses crt;
var
  i, j, num, espacios: integer;
begin
  clrscr;
  for i := 1 to 10 do
  begin
    num := i;

    for espacios := 1 to (10 - i) do
      write(' ');

    for j := 1 to i * 2 - 1 do
    begin
      write(Chr(48 + (num mod 10)));
      if j < i then
        inc(num)
      else
        dec(num);
    end;

    writeln;
  end;
  readln;
end.
