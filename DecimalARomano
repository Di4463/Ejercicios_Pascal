program DecimalARomano;
uses crt;
var
  valores: array[1..13] of integer = (1000,900,500,400,100,90,50,40,10,9,5,4,1);
  simbolos: array[1..13] of string = ('M','CM','D','CD','C','XC','L','XL','X','IX','V','IV','I');
  num, i: integer;
begin
  clrscr;
  write('Numero decimal: '); readln(num);

  for i := 1 to 13 do
    while num >= valores[i] do
    begin
      write(simbolos[i]);
      num := num - valores[i];
    end;
  writeln;
  readln;
end.
