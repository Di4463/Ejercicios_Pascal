program Volcan;
uses crt;
var
  i, j, k, n, longitud: integer;
begin
  clrscr;
  n := 6; { número de filas }
  for i := 1 to n do
  begin
    longitud := 1 shl i;  { equivale a 2^i usando desplazamiento de bits }

    { espacios para centrar la línea }
    for k := 1 to (64 - longitud) div 2 do
      write(' ');

    { imprimir los asteriscos }
    for j := 1 to longitud do
      write('*');

    writeln;
  end;
  readln;
end.
